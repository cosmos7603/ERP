            @Html.ValidationMessageFor(model => model.Telephone1)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Telephone2)
        </div>
        <div class="editor-field">
            @(Html.TextBoxFor(m => m.Telephone2, new { @class = "k-textbox clientEdit" }))
            @Html.ValidationMessageFor(model => model.Telephone2)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Address1)
        </div>
        <div class="editor-field">
            @(Html.TextBoxFor(m => m.Address1, new { @class = "k-textbox clientEdit" }))
            @Html.ValidationMessageFor(model => model.Address1)
        </div>
        <div class="editor-field">
            @(Html.TextBoxFor(m => m.Address2, new { @class = "k-textbox clientEdit" }))
            @Html.ValidationMessageFor(model => model.Address2)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.City)
        </div>
        <div class="editor-field">
            @(Html.TextBoxFor(m => m.City, new { @class = "k-textbox clientEdit" }))
