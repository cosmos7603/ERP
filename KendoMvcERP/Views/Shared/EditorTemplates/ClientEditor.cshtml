@using Entities.POCOEntities
@model Entities.POCOEntities.ClientPOCO
<style>
    .clientEdit {
        width: 70%;
    }
</style>


@using (Html.BeginForm())
{

    <div class="editor-label">
        @Html.LabelFor(m => m.ComercialName)
    </div>
        <div class="editor-field">
            @(Html.TextBoxFor(m => m.ComercialName, new { @class = "k-textbox clientEdit" }))
            @Html.ValidationMessageFor(model => model.ComercialName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.FirstName)
        </div>
        <div class="editor-field">
            @(Html.TextBoxFor(m => m.FirstName, new { @class = "k-textbox clientEdit" }))
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.LastName)
        </div>
        <div class="editor-field">
            @(Html.TextBoxFor(m => m.LastName, new { @class = "k-textbox clientEdit" }))
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Email)
        </div>
        <div class="editor-field">
            @(Html.EditorFor(m => m.Email, new { @class = "k-textbox clientEdit" }))
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.CUIT)
        </div>
    <div class="editor-field">
        @(Html.TextBoxFor(m => m.CUIT, new {@class = "k-textbox clientEdit"}))
        @Html.ValidationMessageFor(model => model.CUIT)
    </div>

    <div class="editor-label">
        @Html.LabelFor(m => m.DNI)
    </div>
        <div class="editor-field">
            @(Html.TextBoxFor(m => m.DNI, new { @class = "k-textbox clientEdit" }))
            @Html.ValidationMessageFor(model => model.DNI)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.ClientTypeId)
        </div>
        <div class="editor-field">
            @(Html.Kendo().DropDownListFor(m => m.ClientTypeId).BindTo((List<ClientTypePOCO>)ViewData["ClientTypes"]).HtmlAttributes(new { data_value_primitive = true }).DataTextField("Description").DataValueField("Id"))
