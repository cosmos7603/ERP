@model IEnumerable<Entities.POCOEntities.SalePOCO>

@*@{
		ViewBag.Title = "Index";
	}*@

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2>Index</h2>
		<ol class="breadcrumb">
			<li class="active">
				<strong>Ventas</strong>
			</li>
		</ol>
	</div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>Ventas</h5>
					@*<div class="ibox-tools">
							@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs"})
						</div>*@
				</div>
				<div class="ibox-content">

					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.SaleState.Description)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.EmisionDate)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.DueDate)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Client.ComercialName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.SaleCategory.Description)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.AmountToCharge)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.TotalAmount)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Observations)
								</th>
								<th></th>
							</tr>
						</thead>
						@foreach (var model in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(x => model.SaleState.Description)
								</td>
								<td>
									@Html.DisplayFor(x => model.EmisionDate)
								</td>
								<td>
									@Html.DisplayFor(x => model.DueDate)
								</td>
								<td>
									@Html.DisplayFor(x => model.Client.ComercialName)
								</td>
								<td>
									@Html.DisplayFor(x => model.SaleCategory.Description)
								</td>
								<td>
									@Html.DisplayFor(x => model.AmountToCharge)
								</td>
								<td>
									@Html.DisplayFor(x => model.TotalAmount)
								</td>
								<td>
									@Html.DisplayFor(x => model.Observations)
								</td>
								<td></td>
							</tr>
						}

					</table>

				</div>
			</div>
		</div>
	</div>
</div>