


<div id="main-section" class="col-xs-12 column">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-18 col-md-12">
                @(Html.MyGrid<KendoMvcERP.Models.ProductViewModel>("grid", "Product")
        .Columns(columns =>
        {
            //columns.Bound(p => p.Id);
            columns.Bound(p => p.ShortDescription);
            columns.ForeignKey(p => p.ProductFamilyId, (System.Collections.IEnumerable)ViewData["ProductFamilies"], "Id", "Description")
      .Title(Resources.Resources.ProductFamily).Width(150);
            columns.ForeignKey(p => p.ProviderId, (System.Collections.IEnumerable)ViewData["Providers"], "Id", "ComercialName")
         .Title(Resources.Resources.Provider).Width(150);
            columns.Bound(p => p.ProductCode);
            columns.Bound(p => p.Stock);
            columns.Bound(p => p.Cost);
            columns.Bound(p => p.SalePrice);
            columns.Command(command => { command.Edit(); command.Destroy(); }).Width(172).Title("Actions");
        }).ToolBar(toolbar => toolbar.Create().Text(@Resources.Resources.NewProduct))
        .Editable(editable => editable.Mode(GridEditMode.PopUp).TemplateName("Product" + "Editor").Window(window => window.Width(600).Resizable().Scrollable(true).Title(Resources.Resources.NewProduct)))
                )
            </div>
        </div>
    </div>
</div>




